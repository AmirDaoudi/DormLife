# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dormlife
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dormlife
POSTGRES_USER=dormlife_user
POSTGRES_PASSWORD=your_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:19006,exp://localhost:19000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dormlife-uploads

# Email Configuration
EMAIL_FROM=noreply@dormlife.app
SENDGRID_API_KEY=your_sendgrid_api_key

# Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

# Temperature Control
TEMPERATURE_UPDATE_INTERVAL=30
VOTE_WINDOW_HOURS=24